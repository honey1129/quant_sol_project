# OKX API
OKX_API_KEY=你的APIKey
OKX_SECRET=你的Secret
OKX_PASSWORD=你的Passphrase

# 是否使用模拟盘 (0为实盘，1为模拟盘)
USE_SERVER=0

# 交易参数
SYMBOL=SOL-USDT-SWAP
LEVERAGE=3
POSITION_SIZE=50

# 多周期
INTERVALS=5m,15m,1H
WINDOWS=5m:5000,15m:5000,1H:2000

# 风控参数
TAKE_PROFIT=0.02
STOP_LOSS=0.01

# 策略阈值
THRESHOLD_LONG=0.55
THRESHOLD_SHORT=0.45

# ✅ 合约配置
LOT_SIZE=0.01
TICK_SIZE=0.001


# 模型路径
MODEL_PATH=models/model_okx.pkl

# 信号平滑参数
SMOOTH_ALPHA=0.3

# 模型文件路径 (用分隔符编码)
MODEL_PATHS=lgb_v1:models/lgb_model.pkl,xgb_v1:models/xgb_model.pkl,rf_v1:models/rf_model.pkl

# 模型权重 (同样用分隔符编码)
MODEL_WEIGHTS=lgb_v1:0.5,xgb_v1:0.3,rf_v1:0.2

# 仓位边界
POSITION_MIN=0.05
POSITION_MAX=0.3
MAX_POSITION_RATIO=0.3
MIN_ADJUST_AMOUNT=50
ADJUST_UNIT=50

# kelly 盈亏比
KELLY_REWARD_RISK=2.5

# 动态风险预算目标波动
TARGET_VOL=0.015


MAX_POSITION=0.4
INITIAL_BALANCE=1000
FEE_RATE=0.0005


# Telegram通知
TELEGRAM_BOT_TOKEN=你的TG_BOT_TOKEN
TELEGRAM_CHAT_ID=你的TG_CHAT_ID